<%- include("partials/header.ejs") %>
<body>
    <%- include("partials/navbar.ejs") %>
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        <form method="post" action="/salvaresposta">
            <h3>Resposta</h3>
            <textarea placeholder="Digite sua resposta" name="resposta" class="form-control"></textarea>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <br>
            <button type="submit" class="btn btn-success">Responder</button>
        </form>

        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta => {%>
            
            <div class="card">
                <div class="card-body">
                    <p><%= resposta.corpo %></p>
                </div>
            </div>
            <br>

        <% }) %>
    </div>
</body>
<%- include("partials/footer.ejs") %>